<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/layout_bars" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:paddingEnd="20dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logoImg"
                        android:layout_width="114dp"
                        android:layout_height="86dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_logo" />

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLength="8"
                        android:text="上来考虑的开发拉"
                        android:textColor="#ffced1da"
                        android:textSize="16sp" />

                    <include layout="@layout/layout_ratingbar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="营业时间：早上 09:00 - 下午18:00"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/phoneTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="客服电话：022-15682141568"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/addressTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="2"
                        android:text="门店地址：AIJ·天津 南开森淼店 教学基地"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/typeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="2"
                        android:text="舞种类型：MV舞蹈 编舞 中国风"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="店内设施："
                            android:textColor="#ffced1da"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:drawableStart="@drawable/icon_unselect_choice"
                            android:drawablePadding="5dp"
                            android:text="WIFI"
                            android:textColor="#ffced1da"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/parking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="36dp"
                            android:drawableStart="@drawable/icon_select_choice"
                            android:drawablePadding="5dp"
                            android:text="停车位"
                            android:textColor="#ffced1da"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/wechatPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="53dp"
                            android:drawableStart="@drawable/icon_select_choice"
                            android:drawablePadding="5dp"
                            android:text="微信支付"
                            android:textColor="#ffced1da"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/aliPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="18dp"
                            android:drawableStart="@drawable/icon_select_choice"
                            android:drawablePadding="5dp"
                            android:text="支付宝支付"
                            android:textColor="#ffced1da"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/followTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/shape_course_details"
                        android:paddingStart="6dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="2dp"
                        android:text="关注机构"
                        android:textColor="#ffdbdee7"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="53dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="53dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="视频介绍"
                    android:textColor="#ffced1da"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="video introduction"
                    android:textColor="#ffced1da"
                    android:textSize="10sp" />

                <cn.jzvd.JzvdStd
                    android:id="@+id/videoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="151dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="门店简介"
                    android:textColor="#ffced1da"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="video introduction"
                    android:textColor="#ffced1da"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/briefTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="零下舞度街舞俱乐部隶属于聆夏文化传播有限公司，我们力
图为每位街舞爱好者提供优质的教学服务和教学环境，并竭
力为更多的街舞爱好者提供舒适的街舞交流平台。"
                    android:textColor="#ffced1da"
                    android:textSize="10sp" />
            </LinearLayout>

            <include layout="@layout/recruit_item" />

            <RelativeLayout
                android:id="@+id/courseTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="精品课程"
                        android:textColor="#ffced1da"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dance Instructor"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:drawableEnd="@drawable/icon_right_arrow"
                    android:drawablePadding="8dp"
                    android:text="更多"
                    android:textColor="#ffe4e4e4"
                    android:textSize="11sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/course_child_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/shape_black_radius5"
                tools:itemCount="2"
                tools:listitem="@layout/child_course_item" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="舞蹈老师"
                        android:textColor="#ffced1da"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dance Instructor"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/danceTeacherTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:drawableEnd="@drawable/icon_right_arrow"
                    android:drawablePadding="8dp"
                    android:text="更多"
                    android:textColor="#ffe4e4e4"
                    android:textSize="11sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/teacher_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                tools:itemCount="3"
                tools:listitem="@layout/teacher_item" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="机构视频"
                        android:textColor="#ffced1da"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Institutional video"
                        android:textColor="#ffced1da"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mechanismVideoTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:drawableEnd="@drawable/icon_right_arrow"
                    android:drawablePadding="8dp"
                    android:text="更多"
                    android:textColor="#ffe4e4e4"
                    android:textSize="11sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/video_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                tools:itemCount="2"
                tools:listitem="@layout/video_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>