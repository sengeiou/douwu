<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="14dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/coverImg"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/icon_video_placeholder" />

        <ImageView
            android:id="@+id/deleteImg"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="11dp"
            android:src="@drawable/icon_video_delete"
            android:visibility="gone" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="240dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/icon_video_head_placeholder" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="21dp"
            android:layout_toRightOf="@id/head_img"
            android:maxWidth="60dp"
            android:maxLines="2"
            android:text="艰苦艰苦拮抗剂"
            android:textColor="#ffe2e2e2"
            android:textSize="12sp" />

        <FrameLayout
            android:layout_width="55dp"
            android:layout_height="15dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_alignTop="@id/name_tv"
            android:layout_toRightOf="@id/name_tv"
            android:background="@drawable/shape_video_love_num">

            <TextView
                android:id="@+id/num_tv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/icon_video_love"
                android:text="9999"
                android:textColor="#ffeaeaea"
                android:textSize="10sp" />
        </FrameLayout>


        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_img"
            android:layout_marginTop="9dp"
            tools:text="#双人舞 挑战自我极限"
            android:textColor="#ffeaeaea"
            android:textSize="15sp" />
    </RelativeLayout>
</FrameLayout>