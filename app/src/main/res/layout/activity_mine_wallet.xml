<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_bars" />

    <LinearLayout
        android:layout_margin="15dp"
        android:background="#ff212126"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/moneyTv"
            android:layout_marginTop="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5534.32"
            android:textColor="#fffefefe"
            android:textSize="33sp"
            />
        <TextView
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前的余额(￥)"
            android:textColor="#fffefefe"
            android:textSize="14sp"
            />
        <View
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:background="#ff2d3341"
            android:layout_marginTop="41dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="18dp"
    android:layout_marginBottom="17dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/zhifubaoLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_zhifubao" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现到支付宝"
            android:gravity="center"
            android:textColor="#fffefefe"
            android:textSize="10sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weixinLayout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_weixin" />
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现到微信"
            android:gravity="center"
            android:textColor="#fffefefe"
            android:textSize="10sp"
            />
    </LinearLayout>
</LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/walletRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#ff212126"
        android:layout_marginBottom="30dp"
        tools:listitem="@layout/item_wallet"
        tools:itemCount="3"/>

</LinearLayout>