<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#ff212126"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="#fff1f3f7"
                android:textSize="13sp"
                />
            <com.dazhukeji.douwu.view.MyEditText
                android:id="@+id/withdrawalEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 131313"
                android:background="@null"
                android:layout_marginStart="15dp"
                android:textColor="#fff1f3f7"
                android:textSize="45sp"/>

            <View
                android:background="#fff0f0f0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/totalPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用余额 411.94 元"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="15dp"
                android:textColor="#ff7c8292"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/sureTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/icon_button_bg"
            android:gravity="center"
            android:text="确认提现"
            android:textColor="#ffdbdee7"
            android:textSize="14sp"/>
    </LinearLayout>
</FrameLayout>