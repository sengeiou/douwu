<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/layout_bars" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:background="#212126"
                android:orientation="vertical"
                android:paddingBottom="26dp"
                android:paddingEnd="34dp"
                android:paddingStart="36dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="管理员"
                        android:textColor="#ffdbdee7"
                        android:textSize="14sp" />

                    <com.dazhukeji.douwu.view.MyEditText
                        android:id="@+id/administratorsNameEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:background="@null"
                        android:hint="请输入管理员姓名"
                        android:textColor="#ff999999"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应聘地址"
                        android:textColor="#ffdbdee7"
                        android:textSize="14sp" />

                    <com.dazhukeji.douwu.view.MyEditText
                        android:id="@+id/addressEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="33dp"
                        android:background="@null"
                        android:hint="请输入门店地址"
                        android:textColor="#ff999999"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系方式"
                        android:textColor="#ffdbdee7"
                        android:textSize="14sp" />

                    <com.dazhukeji.douwu.view.MyEditText
                        android:id="@+id/phoneEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="33dp"
                        android:background="@null"
                        android:hint="请输入门店联系方式"
                        android:textColor="#ff999999"
                        android:textColorHint="#ff999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:background="#212126"
                android:orientation="horizontal"
                android:paddingBottom="23dp"
                android:paddingEnd="29dp"
                android:paddingStart="36dp"
                android:paddingTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应聘时间"
                    android:textColor="#ffdbdee7"
                    android:textSize="14sp" />

                <com.dazhukeji.douwu.view.MyEditText
                    android:id="@+id/timeEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:background="@null"
                    android:hint="请输入应聘时间(如09:00 ~ 18:00)"
                    android:textColor="#ff999999"
                    android:textColorHint="#ff999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:background="#212126"
                android:orientation="horizontal"
                android:paddingBottom="23dp"
                android:paddingEnd="29dp"
                android:paddingStart="36dp"
                android:paddingTop="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄需求"
                    android:textColor="#ffdbdee7"
                    android:textSize="14sp" />

                <com.dazhukeji.douwu.view.MyEditText
                    android:id="@+id/ageEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:background="@null"
                    android:hint="请输入年龄需求"
                    android:textColor="#ff999999"
                    android:textColorHint="#ff999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:background="#212126"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingEnd="29dp"
                android:paddingStart="36dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应聘需求"
                    android:textColor="#ffdbdee7"
                    android:textSize="14sp" />

                <com.dazhukeji.douwu.view.MyEditText
                    android:id="@+id/applicationRequirementsEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请填写应聘需求"
                    android:minHeight="90dp"
                    android:textColor="#ff999999"
                    android:textColorHint="#ff999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:background="#212126"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingEnd="29dp"
                android:paddingStart="36dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="舞种类型"
                    android:textColor="#ffdbdee7"
                    android:textSize="14sp" />

                <com.dazhukeji.douwu.view.MyEditText
                    android:id="@+id/typeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="请填写机构五中类型"
                    android:minHeight="90dp"
                    android:textColor="#ff999999"
                    android:textColorHint="#ff999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:background="#212126"
                android:orientation="vertical"
                android:paddingBottom="14dp"
                android:paddingEnd="29dp"
                android:paddingStart="36dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店面图片"
                    android:textColor="#ffdbdee7"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/picImg1"
                        android:layout_width="127dp"
                        android:layout_height="104dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_modify_head" />

                    <ImageView
                        android:id="@+id/picImg2"
                        android:layout_width="127dp"
                        android:layout_height="104dp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_modify_head" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/confirmTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/icon_button_bg"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:text="确认修改"
                android:textColor="#ffdbdee7"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>