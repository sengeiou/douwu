<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="#7f000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:background="@drawable/icon_pay_bg"
        android:layout_width="match_parent"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/priceTv"
            android:drawableStart="@drawable/icon_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120.00"
            android:layout_marginTop="45dp"
            android:drawablePadding="7dp"
            android:textColor="#ff29282f"
            android:textSize="40sp"
            />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/head_img"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_video_head_placeholder" />

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_toRightOf="@id/head_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="topRock or Freeze"
                    android:textColor="#ff999999"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/contentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="小杰 17:00 - 20:00"
                    android:textColor="#ff999999"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="难度"
                        android:background="@drawable/icon_difficulty_bg"
                        android:textColor="#ffdbdee7"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/difficultyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="中级进阶"
                        android:textColor="#ff999999"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginStart="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="29dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/icon_pay_voucher"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/voucherTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2张可用"
                android:layout_alignParentEnd="true"
                android:drawablePadding="4dp"
                android:drawableEnd="@drawable/icon_pay_arrow"
                android:textColor="#ff666666"
                android:textSize="10sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信支付"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/icon_wechat"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
            <ImageView
                android:id="@+id/wechat_img"
                android:src="@drawable/icon_pay_unselect"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginStart="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/icon_alipay"
                android:textColor="#ff666666"
                android:textSize="12sp"
                />
            <ImageView
                android:id="@+id/alipay_img"
                android:src="@drawable/icon_pay_select"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/payTv"
            android:layout_marginTop="18dp"
            android:background="@drawable/icon_pay_button_bg"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="确认支付 : 120.00"
            android:textColor="#ffe45487"
            android:textSize="12sp"
            />
    </LinearLayout>


</FrameLayout>