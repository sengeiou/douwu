<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/icon_login_code_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/exitImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/icon_login_code_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="15dp"
            android:text="请输入下面的图形验证码"
            android:textColor="#ff666666"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/codeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:src="@drawable/icon_login_verification_code" />

        <com.dazhukeji.douwu.view.MyEditText
            android:id="@+id/codeEdit"
            android:layout_width="104dp"
            android:layout_height="21dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_login_code"
            android:padding="3dp"
            android:gravity="center"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="33dp"
            android:text="请输入正确的验证码"
            android:textColor="#ffe45487"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/commitTv"
            android:background="@drawable/icon_login_code_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="#ff666666"
            android:textSize="8sp"
            android:layout_marginBottom="8dp"
            />
    </LinearLayout>

</FrameLayout>