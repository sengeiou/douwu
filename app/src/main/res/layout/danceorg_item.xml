<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/daceorg_item"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/icon_dance_item_bg"
    android:orientation="vertical"
    android:paddingStart="11dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精舞门Hip - Hop"
        android:textColor="#ffced1da"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/classify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="MV舞蹈  编舞  中国风"
        android:textColor="#ffced1da"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="KeeHow·天津 河西陆家店"
        android:textColor="#ffced1da"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.dazhukeji.douwu.view.RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:gravity="center"
            android:numStars="5"
            app:starFill="@drawable/icon_select_star"
            app:starHalf="@drawable/icon_unselect_star"
            app:starImageSize="12dp"
            app:starStep="3"
            app:starcount="5"
            app:starempty="@drawable/icon_unselect_star"
            app:starpadding="5dp"
            app:stepSize="Full" />

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.0"
            android:textColor="#ffced1da"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cancelImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icon_video_delete"
        android:visibility="gone" />
</LinearLayout>