<?xml version="1.0" encoding="utf-8"?>
<com.dazhukeji.douwu.view.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_black_radius5">

            <ImageView
                android:id="@+id/head_img"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_video_head_placeholder"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/head_img"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/courseNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="topRock or Freeze"
                    android:textColor="#ffdbdee7"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/adminTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="小杰 17:00 - 20:00"
                    android:textColor="#ffdbdee7"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_difficulty_bg"
                        android:padding="3dp"
                        android:text="难度"
                        android:textColor="#ffdbdee7"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/difficultyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="中级进阶"
                        android:textColor="#ffdbdee7"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="96dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出售中"
                    android:textColor="#ffe45487"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_grey_radius3"
                    android:paddingBottom="7dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="7dp"
                    android:text="已下架"
                    android:textColor="#ffdbdee7"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="33dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#ffdbdee7"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/priceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="120"
                        android:textColor="#ffdbdee7"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="#ffe45487"
            android:gravity="center"
            android:paddingBottom="31dp"
            android:paddingEnd="14dp"
            android:paddingStart="14dp"
            android:paddingTop="31dp"
            android:text="下 架"
            android:textColor="#ffdbdee7"
            android:textSize="16sp" />
    </LinearLayout>
</com.dazhukeji.douwu.view.SwipeMenuLayout>